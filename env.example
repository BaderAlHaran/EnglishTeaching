# Environment Variables for Essay Writing Service
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Admin Credentials (do not commit real values)
ADMIN_USERNAME=mikoandnenoarecool
ADMIN_PASSWORD=
ADMIN_EMAIL=admin@yourdomain.com

# Database Configuration
DATABASE_URL= # e.g. postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_PATH=essay_service.db

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://yourdomain.onrender.com

# SMTP Configuration for contact form
# Example for Gmail: SMTP_HOST=smtp.gmail.com, SMTP_PORT=587
# If using Gmail, you must use an App Password (not your normal password)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_USE_TLS=true
# Where contact form emails are delivered
CONTACT_RECIPIENT=norakalmutairi@gmail.com